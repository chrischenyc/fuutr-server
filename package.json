{
  "name": "otg-server",
  "version": "1.0.0",
  "description": "OTG Ride API server",
  "author": "Chris Chen <chris@otgride.com>",
  "main": "src/index.js",
  "private": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "start:debug": "DEBUG=OTGRide:* nodemon src/index.js",
    "docker:build:staging": "docker build -t otg-ride-api-staging .",
    "docker:tag:staging": "docker tag otg-ride-api-staging:latest 257597197403.dkr.ecr.ap-southeast-2.amazonaws.com/otg-ride-api-staging:latest",
    "docker:push:staging": "docker push 257597197403.dkr.ecr.ap-southeast-2.amazonaws.com/otg-ride-api-staging:latest",
    "aws:cloudformation:staging": "aws cloudformation update-stack --stack-name OTG-Rider-API-Server-Staging --use-previous-template --capabilities CAPABILITY_IAM --parameters ParameterKey=DockerImageURL,ParameterValue=257597197403.dkr.ecr.ap-southeast-2.amazonaws.com/otg-ride-api-staging:latest ParameterKey=DesiredCapacity,UsePreviousValue=true ParameterKey=InstanceType,UsePreviousValue=true ParameterKey=MaxSize,UsePreviousValue=true ParameterKey=SubnetIDs,UsePreviousValue=true ParameterKey=VpcId,UsePreviousValue=true",
    "deploy:staging": "npm run docker:build:staging && npm run docker:tag:staging && npm run docker:push:staging",
    "postdeploy:staging": "echo RUN NEW AWS ECS TASK: https://ap-southeast-2.console.aws.amazon.com/ecs/home?region=ap-southeast-2#/clusters/otg-ride-api-staging/tasks",
    "deploy:production": "echo production"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:otg-ride-dev/server.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "REST",
    "API"
  ],
  "dependencies": {
    "@mapbox/polyline": "^1.0.0",
    "@sendgrid/mail": "^6.3.1",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "bluebird": "^3.5.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "debug": "^4.1.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validation": "^1.0.2",
    "express-winston": "^3.0.1",
    "handlebars": "^4.0.12",
    "helmet": "^3.15.0",
    "html-to-text": "^4.0.0",
    "http-status": "^1.3.1",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "juice": "^5.0.1",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "mongoose": "^5.3.14",
    "mongoose-geojson-schema": "^2.1.3",
    "morgan": "^1.9.1",
    "npm": "^6.4.1",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "querystring": "^0.2.0",
    "stripe": "^6.17.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "winston-aws-cloudwatch": "^3.0.0"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
  }
}
