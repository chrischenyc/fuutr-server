{
  "extends": ["airbnb-base"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "rules": {
    "comma-dangle": ["error", "always-multiline", { "functions": "never" }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
